<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/password"
        style="@style/TextAppearance.Libum.MediumTitle"
        android:textColor="?attr/colorOnBackground" />

    <RelativeLayout
        android:id="@+id/password_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/_label"
        android:background="@drawable/rounded_field_background"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password_filed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/password_hint"
            style="@style/TextAppearance.Libum.Body"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@id/password_visibility_button"
            android:padding="@dimen/margin_inside_text"
            android:singleLine="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textColorHighlight="@android:color/transparent"
            android:inputType="textPassword"
            android:outlineProvider="none"
            android:background="@android:color/transparent" />


        <ImageButton
            android:id="@+id/password_visibility_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="4dp"
            android:visibility="visible"
            android:focusable="false"
            android:src="@drawable/se_hide_icon_24dp"
            android:background="@color/background"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:paddingEnd="@dimen/margin_inside_text"
            android:paddingStart="@dimen/margin_inside_text"
            tools:ignore="RtlSymmetry" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
