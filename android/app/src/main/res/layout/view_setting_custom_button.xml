<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/all_size_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="9dp">

        <ImageView
            android:id="@+id/button_logo"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@color/gray_200"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            app:tint="@drawable/se_navigator_indicator_color"
            />

        <TextView
            android:id="@+id/button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/button_logo"
            android:layout_marginStart="8dp"
            style="@style/TextAppearance.Libum.Body"
            android:layout_centerVertical="true"
            android:text="button"
            android:padding="2dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/additional_text_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.Libum.BodySecondary"
                android:text="@string/plaintext"
                >
            </TextView>

            <ImageButton
                android:id="@+id/button_arrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:padding="0dp"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@color/gray_200"
                android:layout_marginStart="16dp"
                app:tint="@drawable/se_navigator_indicator_color"
                />

        </LinearLayout>


    </RelativeLayout>

</merge>
