<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/book_image"
        android:layout_width="98dp"
        android:layout_height="142dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@color/gray_200"
        app:shapeAppearanceOverlay="@style/roundedImageView.BookView"
        >
    </com.google.android.material.imageview.ShapeableImageView>

    <ImageView
        android:id="@+id/premium_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/book_image"
        app:layout_constraintTop_toTopOf="@id/book_image"
        android:src="@drawable/ic_premium_book"
        android:visibility="invisible"
        >
    </ImageView>

    <View
        android:id="@+id/_title_background"
        android:layout_width="0dp"
        android:layout_height="29dp"
        app:layout_constraintBottom_toBottomOf="@id/book_image"
        app:layout_constraintStart_toStartOf="@id/book_image"
        app:layout_constraintEnd_toEndOf="@id/book_image"
        android:background="@color/gray_blue_200"
        android:alpha="0.6"
        >
    </View>

    <TextView
        android:id="@+id/book_title_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/_title_background"
        app:layout_constraintEnd_toEndOf="@id/_title_background"
        app:layout_constraintTop_toTopOf="@id/_title_background"
        app:layout_constraintBottom_toBottomOf="@id/_title_background"
        android:maxLines="2"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:ellipsize="marquee"
        style="@style/TextAppearance.Material3.LabelSmall"
        android:textColor="?colorOnBackground"
        android:text="A very cool book title  title title title title title title"
        tools:ignore="HardcodedText"
        >
    </TextView>

    <TextView
        android:id="@+id/book_read_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.Material3.LabelMedium"
        app:layout_constraintTop_toBottomOf="@id/book_image"
        app:layout_constraintStart_toStartOf="@id/book_image"
        android:text="100%"
        tools:ignore="HardcodedText">
    </TextView>

    <ImageButton
        android:id="@+id/more_options_button"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="@id/book_image"
        app:layout_constraintTop_toTopOf="@id/book_read_percent"
        app:layout_constraintBottom_toBottomOf="@id/book_read_percent"
        android:src="@drawable/ic_more_options"
        android:background="?attr/backgroundColor"
        >
    </ImageButton>



</androidx.constraintlayout.widget.ConstraintLayout>